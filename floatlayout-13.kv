<Button>
	font_size: 32
	size_hint: (0.3, 0.3) #30% of height and width


<MyLayout>

	FloatLayout:
		size: (root.width, root.height)


		Button:
		# {"x", "y", "top", "bottom", "left", "right"
			text: 'Top Left'
			pos_hint: {'x':0, 'top':1}

		Button:
			text: 'Top Right'
			pos_hint: {"right":1, "top":1}

		Button:
			text: 'Center'
			pos_hint: {"x":0.35, "y":0.35}

		Button:
			text: 'Bottom Left'
			pos_hint:{"bottom":1, "left":1}

		Button:
			text: 'Bottom Right'
			pos_hint:{"bottom":1, "right":1}
