<MyLayout>
	BoxLayout:
		orientation: 'vertical'
		size: (root.width, root.height)

		padding: 50
		spacing: 20

		Label:
			id:my_label
			text: 'Click the image below'
			font_size: 32


		Button:
			text: ''
			font_size: 32
			size_hint: (.15, .28)
			pos_hint: {'center_x': 0.5}
			background_color: (0, 0, 0, 0)

			on_press: root.click_on()
			on_release: root.click_off()

			Image:
				id: my_image
				source: 'images/before.png'
				center_x: self.parent.center_x
				center_y: self.parent.center_y