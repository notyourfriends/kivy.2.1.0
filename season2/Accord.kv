#:import Factory kivy.factory.Factory
<MyPopup@Popup>
	auto_dismiss: False
	size_hint: 0.6, 0.2
	pos_hint: {"x": 0.2, "top":0.9}
	title: 'This is a popup box'

	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height
		
		Label:
			text:"Nice one, now you can leave"

		Button:
			text: 'Close Me!'
			font_size: 20
			on_release: root.dismiss()

<MyLayout>
	id: my_widget
	slide_text: slider_label
	BoxLayout:
		orientation: 'vertical'
		size: (root.width, root.height)
		padding: 20
		spacing: 20

		Accordion:
			orientation: 'vertical'

			AccordionItem:
				title: 'Tutorial 22: Rounded Button '
				RoundedButton:
					text: 'Press me'
					pos_hint: {'center_x': 1}
					size_hint: (.5, .5)
					on_press: print("Goodbye!")

			AccordionItem:
				title: 'Tutorial 23: FileChooser'
				Image:
					id:my_image
					source: ''
				FileChooserIconView:
					id: filechooser
					on_selection: my_widget.selected(filechooser.selection)

			AccordionItem:
				title: 'Tutorial 24: Spell Checker'
				Label:
					id: word_label
					text_size: self.size
					halign: "center"
					valign: "middle"
					text: "Enter a Word"
					font_size: 30

				TextInput:
					id: word_input
					multiline: False
					size_hint: (.5, 1)

				Button:
					size_hint: (.5, 1)
					font_size: 30
					text: 'Submit'
					on_press: root.press()


			AccordionItem:
				title: 'Tutorial 25: Slider'
				Label:
					id: slider_label
					text: 'Slide the Slider!'
					font_size: 25

				Slider:
					min:1
					max:50
					step:1
					orientation: 'horizontal'
					on_value: root.slide_it(*args)

			AccordionItem:
				title: 'Tutorial 26: Accordion'
				Label:
					text: 'This entire App is Accordion'

			AccordionItem:
				title: 'Tutorial 27: Carousel '
				Carousel:
					direction: "right"
					Image:
						source:  "D:\kivy\kivy.2.1.0\images\kaneki.png"
					Image:
						source:  "D:\kivy\kivy.2.1.0\images\megumin.png"
					Image:
						source:  "D:\kivy\kivy.2.1.0\images\dp.jpg"
			
			AccordionItem:
				title: 'Tutorial 28: Checkboxes'
				Label: 
					text: 'Select Pizza Toppings'					
					font_size: 15
				
				GridLayout:
					cols: 2

					Label:
						text: "Pepperoni"
						font_size: 15
					CheckBox: 
						on_active: root.checkbox_click(self,self.active, "Pepperoni")
					Label:
						text: "Cheese"
						font_size: 15
					CheckBox: 
						on_active: root.checkbox_click(self,self.active, 'Cheese')
					Label:
						text: "Mushroom"
						font_size: 15
					CheckBox: 
						on_active: root.checkbox_click(self,self.active, 'Mushroom')
				Label:
					id: output_label1
					text: ''
					font_size: 15

			AccordionItem:
				title:'Tutorial 29: Radio Buttons'
				Label:
					text: 'Select Pizza Toppings'
					font_size: 15

				GridLayout:
					cols: 2

					Label:
						text: "Pepperoni"
						font_size: 15
					CheckBox:
						group: "pizza_toppings" 
						on_active: root.checkbox_click(self,self.active, "Pepperoni")
					Label:
						text: "Cheese"
						font_size: 15
					CheckBox: 
						group: "pizza_toppings" 
						on_active: root.checkbox_click(self,self.active, 'Cheese')
					Label:
						text: "Mushroom"
						font_size: 15
					CheckBox: 
						group: "pizza_toppings" 	
						on_active: root.checkbox_click(self,self.active, 'Mushroom')
				Label:
					id: output_label2
					text: ''
					font_size: 15

			AccordionItem:
				title: 'Tutorial 30: Pop-up Boxes'
				Label:
					text: "Popup stuff"
					font_size: 20

				Button:
					text: 'Click Me!'
					font_size: 20
					on_release: Factory.MyPopup().open()

			AccordionItem:
				title: 'Tutorial 32: Dropdown Spinner Boxes'
				Label:
					id: click_label
					text: "Pick Your Favorite Color"
					font_size: 20


				Spinner:
					id: spinner_id
					text: 'Favorite Color'
					values: ['Red','Green','Blue']
					size_hint: .5 , .4
					on_text: root.spinner_clicked(spinner_id.text)

			AccordionItem:
				title: 'Tutorial 33: Resize Widget with Splitter'

				Splitter:
					sizable_from: 'top'
					Button:
						text: 'Hello World 1'
						font_size: 20
				Label:
					text_size: 'This is some Text!'
					font_size: 20

				Splitter:
					sizable_from: 'top'
					Button:
						text: 'Hello World 2'
						font_size: 20

				GridLayout:
					cols: 2
					Button:
						text: 'left'
						font_size: 20
					Splitter:
						sizable_from: 'left'
						Button:
							text: 'right'
							font_size: 20


<RoundedButton@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (48/255, 84/255, 150/255, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [50]